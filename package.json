{
  "name": "fullstack-app",
  "version": "0.1.0",
  "description": "Full-stack monorepo with NestJS backend and React frontend",
  "private": true,
  "license": "MIT",
  "scripts": {
    "setup": "npm run setup:server && npm run setup:client",
    "setup:server": "cd server && npm install",
    "setup:client": "cd client && npm install",
    "server:start": "cd server && npm run start",
    "server:start:dev": "cd server && npm run start:dev",
    "server:build": "cd server && npm run build",
    "client:start:dev": "cd client && npm run start:dev",
    "client:build": "cd client && npm run build",
    "client:preview": "cd client && npm run preview",
    "dev": "concurrently \"npm run server:start:dev\" \"npm run client:start:dev\"",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\""
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "keywords": [
    "nestjs",
    "react",
    "typescript",
    "mono",
    "repo"
  ],
  "author": "rattanak chea"
}
